<div class="container mt-3">
  <p><strong>New Order</strong></p>

  <%= simple_form_for([pet, order], data: { insert_in_list_target: "form", action: "submit->insert-in-list#send" }) do |form| %>

    <div class="form-actions">
      <%= form.input :date, as: :date, html5: true, input_html: { data: { insert_in_list_target: "input" }} %>
      <%= form.button :submit, 'Create Order', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back', pets_path, class: 'btn btn-secondary mt-2' %>
</div>
