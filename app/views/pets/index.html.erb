<h1>Available pets to rent!</h1>
<%= link_to "Add new pet", new_pet_path, class:"btn btn-dark" %>


<div style="width: 100%; height: 600px;"
     data-controller="map"
     data-map-markers-value="<%= @markers.to_json %>"
     data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


<div class="container">
  <div class="mt-5">
    <h2>Meet our pets</h2>
    <% @pets.each do |pet| %>
      <% if pet.photo.key.present? %>
        <%= cl_image_tag pet.photo.key, height: 300, width: 400, crop: :fill %>
            <h2><%= link_to pet.name, pet, class: "badge bg-primary text-wrap" %></h2>
            <p><%= pet.details %></p>
            <p><strong>Price:</strong> <%= pet.price %></p>
      <% end %>
    <% end %>
  </div>
</div>
