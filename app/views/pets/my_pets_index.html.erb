<h1> My pets!</h1>


<%= link_to "Add new pet", new_pet_path, class:"btn btn-flat" %>

<div class="container mt-3">
  <div class="cards">
    <% @pets.each do |pet| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(pet.photo.key, height: 300, width: 400, crop: :fill) %>)">
        <%= link_to pet.name, pet, class: "pet-name" %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "Available pets", pets_path, class:"btn btn-gradient mt-3" %>

</div>
